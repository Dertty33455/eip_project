# Environment variables
# Copy this file to .env.local and fill in the values

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/BookShell?schema=public"

# NextAuth / JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-this"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="BookShell"

# Mobile Money APIs
MTN_MOMO_API_KEY="your-mtn-api-key"
MTN_MOMO_USER_ID="your-mtn-user-id"
MTN_MOMO_SUBSCRIPTION_KEY="your-mtn-subscription-key"
MTN_MOMO_API_URL="https://sandbox.momodeveloper.mtn.com"
MTN_MOMO_CALLBACK_URL="http://localhost:3000/api/webhooks/mtn"

MOOV_MONEY_API_KEY="your-moov-api-key"
MOOV_MONEY_MERCHANT_ID="your-moov-merchant-id"
MOOV_MONEY_API_URL="https://api.moov-africa.com"
MOOV_MONEY_CALLBACK_URL="http://localhost:3000/api/webhooks/moov"

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Email (optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"

# SMS (optional - for phone verification)
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Platform Settings
PLATFORM_COMMISSION_RATE="0.05"
FREE_AUDIOBOOK_CHAPTERS="1"

# Optional: point the frontend at an external backend instead of internal API routes
NEXT_PUBLIC_API_URL="http://localhost:8000"
